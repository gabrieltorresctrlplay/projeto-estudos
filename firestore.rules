rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================================================
    // HELPERS
    // =================================================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // =================================================================
    // USERS
    // =================================================================
    match /users/{userId} {
      // O usuário pode ler/escrever seu próprio perfil
      allow create, update, delete: if isOwner(userId);
      // Qualquer usuário autenticado pode ler dados básicos de outros (para listar membros)
      allow read: if isAuthenticated();
    }

    // =================================================================
    // INVITES (Regra Especial)
    // =================================================================
    match /invites/{token} {
      // Permite ler o convite se tiver o ID (token) exato, mesmo sem login
      // Necessário para mostrar detalhes do convite na página de aterrissagem
      allow get: if true;
      
      // Listar e escrever requer autenticação
      allow list, write: if isAuthenticated();
    }

    // =================================================================
    // REGRAS GERAIS (DEV MODE)
    // =================================================================
    // Para todas as outras coleções (organizations, members, etc),
    // permitimos leitura e escrita livre para qualquer usuário LOGADO.
    // Isso facilita o desenvolvimento e testes (playwright e emulador).
    // NÃO USAR EM PRODUÇÃO COM DADOS REAIS DE CLIENTES.
    // =================================================================
    // QUEUE SYSTEM (Public Access Areas)
    // =================================================================
    
    // Filas e Subcoleções
    match /queues/{queueId} {
      // Leitura pública (necessário para Monitor, Totem e Tracking)
      allow read: if true;
      allow write: if isAuthenticated();

      // Tickets (Senhas)
      match /tickets/{ticketId} {
        // Leitura pública (Tracking)
        allow read: if true;
        
        // Criação: Logados (Emissor) OU Público (Totem)
        allow create: if isAuthenticated() || true; 
        
        // Update: Logados (Emissor/Admin) OU Público SE for apenas feedback
        allow update: if isAuthenticated() || 
          (request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['feedbackRating', 'feedbackComment', 'feedbackAt']));
      }

      // Contadores, Categorias, Métricas
      match /{subcollection=**} {
        allow read: if true;
        allow write: if isAuthenticated();
      }
    }

    // Métricas Globais (Collection Group)
    match /{path=**}/queueMetrics/{docId} {
      allow read, write: if isAuthenticated();
    }

    // =================================================================
    // REGRAS GERAIS (DEV MODE)
    // =================================================================
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
