rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regras de segurança para usuários autenticados
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para empresas - usuário só pode acessar suas próprias empresas
    match /companies/{companyId} {
      // Permitir leitura apenas se o usuário é o dono da empresa
      allow read: if request.auth != null && resource.data.ownerId == request.auth.uid;
      
      // Permitir criação apenas se o usuário está definindo a si mesmo como dono
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;

      // Permitir atualização apenas se o usuário é o dono da empresa
      allow update: if request.auth != null && resource.data.ownerId == request.auth.uid;
      
      // Permitir deleção apenas se o usuário é o dono da empresa
      allow delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
    
    // Coleção pública (apenas leitura para todos, escrita para autenticados)
    match /public/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Regra temporária para desenvolvimento (REMOVER EM PRODUÇÃO)
    // Expira em: 10/01/2026
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2026, 1, 10);
    }
  }
}
